<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>

    <variable
        name="viewModel"
        type="com.example.aposs_admin.ui_controller.detail_predict_fragment.DetailPredictViewModel" />
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_controller.detail_predict_fragment.DetailPredictFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_ground"
        android:text="@string/app_name"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_green"
            app:layout_collapseMode="pin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="40dp"
                        android:layout_toRightOf="@+id/back"
                        android:text="Chi tiết dự báo"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16dp" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên dự báo: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.detailPredictDTO.name}"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả dự báo: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_name_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_description_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.detailPredictDTO.description}"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/tv_description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian tạo: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_description_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_time_info"/>
            <TextView
                android:id="@+id/tv_time_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.detailPredictDTO.createDate}"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/tv_description_info"
                app:layout_constraintLeft_toRightOf="@id/tv_time"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh mục: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_time_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_kind_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.detailPredictDTO.subcategoryName}"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/tv_kind"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_kind_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_product_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.detailPredictDTO.productName}"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/tv_product"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_product_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_period_info"/>
            <TextView
                android:id="@+id/tv_period_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.detailPredictDTO.fullFromToDate}"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/tv_product_info"
                app:layout_constraintLeft_toRightOf="@id/tv_period"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="So với thực tế: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_period"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>