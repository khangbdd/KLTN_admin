<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="calendarItem"
            type="com.example.aposs_admin.model.CalendarItem" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:paddingHorizontal="5dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_calendar_item">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@{Integer.toString(calendarItem.date)}"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/isOff"
        app:layout_constraintVertical_bias="1"
        android:src="@drawable/ic_is_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        isSpecial="@{calendarItem.off}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/isNationalHoliday"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/isNationalHoliday"
        android:src="@drawable/ic_is_national_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        isSpecial="@{calendarItem.nationalHoliday}"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/isOff"
        app:layout_constraintRight_toLeftOf="@id/isLocalHoliday"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/isLocalHoliday"
        android:src="@drawable/ic_is_local_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        isSpecial="@{calendarItem.localHoliday}"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/isNationalHoliday"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>