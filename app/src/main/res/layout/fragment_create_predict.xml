<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.aposs_admin.ui_controller.create_predict_fragment.CreatePredictViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui_controller.create_predict_fragment.CreatePredictFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/back_ground"
            android:text="@string/app_name"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:liftOnScroll="true">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_green"
                app:layout_collapseMode="pin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="40dp"
                            android:layout_toRightOf="@+id/back"
                            android:text="Tạo dự báo mới"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="16dp" />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tv_select_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn danh mục cần dự báo"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.selectedKindName}"
            android:textColor="#616161"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_predict_button"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_select_kind"/>

        <TextView
            android:id="@+id/tv_select_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn danh mục cần dự báo"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_select_kind"/>

        <TextView
            android:id="@+id/tv_note_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Sản phẩm dự báo để trống nếu muốn dự đoán ngành hàng"
            android:textSize="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_product"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.selectedProductName}"
            android:textColor="#616161"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_predict_button"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_note_product"/>

        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dự báo đến"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/date_input"
            app:layout_constraintTop_toTopOf="@id/date_input"
            app:layout_constraintBottom_toBottomOf="@id/date_input"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pick_meter"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:background="#F9F9F9"
            app:boxStrokeColor="#A7A9AC"
            app:boxStrokeWidth="1dp"
            app:endIconDrawable="@drawable/selector_drop_menu"
            app:hintEnabled="false"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/date_input"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_select_product">

            <AutoCompleteTextView
                android:id="@+id/selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:inputType="none"
                android:textFontWeight="400" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#F9F9F9"
            app:boxStrokeColor="#A7A9AC"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/tv_select_date"
            app:layout_constraintRight_toLeftOf="@id/pick_meter"
            app:layout_constraintTop_toBottomOf="@id/btn_select_product">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:text="@={viewModel.numberOfDate}"
            android:textFontWeight="400" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_note_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Tối đa x ngày/ tháng kể từ hôm nay."
            android:textSize="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_input"/>


<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_predict"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:text="Dự báo"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_button_checkout"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>