<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="predictRecord"
            type="com.example.aposs_admin.model.dto.PredictionRecordDTO" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">
    <TextView
        android:id="@+id/tv_name_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{predictRecord.name}"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian tạo: "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_name_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_time_info"/>
    <TextView
        android:id="@+id/tv_time_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{predictRecord.createDate}"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/tv_name_info"
        app:layout_constraintLeft_toRightOf="@id/tv_time"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm: "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_time_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_product_info"/>
    <TextView
        android:id="@+id/tv_product_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/tv_time_info"
        app:layout_constraintLeft_toRightOf="@id/tv_product"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian: "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_product_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_period_info"/>
    <TextView
        android:id="@+id/tv_period_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{predictRecord.fullFromToDate}"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/tv_product_info"
        app:layout_constraintLeft_toRightOf="@id/tv_period"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái: "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_period"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_status_info"/>
    <TextView
        android:id="@+id/tv_status_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_period_info"
        app:layout_constraintLeft_toRightOf="@id/tv_status"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_status_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>